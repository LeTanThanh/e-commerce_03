<% if obj.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <%= t ".the_form_contains" %> <%= pluralize obj.errors.size, t(".error") %>
    </div>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

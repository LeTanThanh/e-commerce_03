<div class="row">
  <div class="col-md-3 product">
    <%= image_tag @product.picture.url, class: "center-image" %>
    <% if logged_in? %>
      <div class="row add-to-cart-container">
        <button class="btn btn-primary btn-add-to-cart"
          data-user-id="<%= current_user.id %>"
          data-product-id="<%= @product.id %>"
          data-max-cart-size="<%= Settings.cart.max_size %>"
          data-full-cart-flash="<%= full_cart_flash %>"
          data-in-cart-flash="<%= in_cart_flash %>"
          data-add-to-cart-flash="<%= add_to_cart_flash %>">
          <span class="glyphicon glyphicon-shopping-cart"></span><%= t ".add_to_cart" %>
        </button>
      </div>
    <% end %>
  </div>
  <div class="col-md-9">
    <h3><%= @product.name %></h3>
    <table class="table">
      <tr>
        <th><%= t ".category" %></th>
        <td>
          <%= @product.category_name %>
        </td>
      </tr>
      <tr>
        <th><%= t ".price" %></th>
        <td>
          <%= number_to_currency @product.price, precision:3, unit: t(".unit"),
            format: t(".format") %>
        </td>
      </tr>
      <tr>
        <th><%= t ".quantity" %></th>
        <td>
          <%= pluralize @product.quantity, t(".product") %> <%= t ".available" %>
        </td>
      </tr>
      <tr>
        <th><%= t ".description" %></th>
        <td>
          <%= @product.description%>
        </td>
      </tr>
      <tr>
        <th><%= t ".rating" %></th>
        <td>
          <span id="rating-point">
            <%= @product.rating_point%> <%= t ".points" %>
          </span>
        </td>
      </tr>
      <% if logged_in? %>
        <tr>
          <th><%= t ".you_rate" %></th>
          <td>
            <div class="col-md-10 select-rating-point">
              <%= select_tag :user_rating_point,
                options_for_select(rating_point_options,
                  current_user.rating_point_rated_product(@product.id)),
                class: "form-control" %>
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary" id="btn-send-rating"
                  data-product-id="<%= @product.id %>"
                  data-user-rated="<%= current_user.rated_product @product.id %>",
                  data-rating-id="<%= current_user.id_rated_product @product.id %>">
                  <%= t ".send_rating" %>
                </button>
              </div>
            </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<div class="row">
  <h3><%= t ".comments" %></h3>
  <% if logged_in? %>
    <div class="row comment-container comment-form">
      <div class="col-md-1 comment-user-avatar">
        <%= gravatar_for current_user %>
      </div>
      <div class="col-md-11">
        <div class="row">
          <span class="comment-user-name">
            <%= current_user.name %>
          </span>
        </div>
        <div class="row">
          <textarea class="new-comment-message"></textarea>
          <button class="btn btn-primary btn-send-comment"
            data-product-id="<%= @product.id %>">
            <%= t(".button_text") %>
          </button>
        </div>
      </div>
    </div>
  <% end %>
  <ul class="list-comment">
    <%= render @comments %>
  </ul>
</div>

<!DOCTYPE html>
<html>
<head>
  <title><%= get_title yield :title %></title>
  <%= render "layouts/default_assets" %>
  <%= render "layouts/shim" %>
</head>
<body>
  <%= render "layouts/header" %>
  <div class="container">
    <% flash.each do |type, message| %>
      <%= content_tag :div, message, class: "alert alert-#{type}" %>
    <% end %>
    <%= yield %>
  </div>
  <div class="container">
    <%= render "layouts/footer" %>
  </div>
</body>
</html>

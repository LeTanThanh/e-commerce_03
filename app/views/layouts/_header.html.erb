<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".app_name"), root_path, id: "logo" %>
    <nav class="nav navbar-nav navbar-right">
      <li><%= link_to t(".home"), root_path %></li>
      <li><%= link_to t(".help"), "/help" %></li>
      <li><%= link_to t(".contact"), "/contact" %></li>
      <li><%= link_to t(".about"), "/about" %></li>
      <% if logged_in? %>
        <li class="user-info" data-user-id="<%= current_user.id %>">
          <%= link_to t(".profile"), current_user %>
        </li>
        <li>
          <%= link_to "#" do %>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span class="count-product-in-cart"></span>
          <% end %>
        </li>
        <% if current_user.is_admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-list-alt"></span> <%= t ".manage" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".requests"), admin_requests_path %></li>
              <li><%= link_to t(".users"), "#" %></li>
              <li><%= link_to t(".categories"), "#" %></li>
              <li><%= link_to t(".products"), "#" %></li>
              <li><%= link_to t(".orders"), "#" %></li>
              <li><%= link_to t(".import"), "#" %></li>
            </ul>
          </li>
        <% end %>
        <li><%= link_to t(".log_out"), logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to t(".login"), login_path %></li>
        <li><%= link_to t(".signup"), signup_path %></li>
      <% end %>
    </nav>
  </div>
</header>

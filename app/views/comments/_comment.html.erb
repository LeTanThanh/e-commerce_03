<li>
  <div class="row comment-container">
    <div class="col-md-1 comment-user-avatar">
      <% if comment.user %>
        <%= gravatar_for comment.user %>
      <% else %>
        <%= image_tag "fallback/no_picture_available.jpg" %>
      <% end %>
    </div>
    <div class="col-md-11">
      <div class="row">
        <span class="comment-user-name">
          <%= comment.user ? comment.user.name : "Unknow" %>
        </span>
        <span class="comment-time">
          Commented <%= time_ago_in_words comment.created_at %> ago
        </span>
      </div>
      <div class="row">
        <%= comment.message %>
      </div>
    </div>
  </div>
</li>

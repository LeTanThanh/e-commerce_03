<li>
  <div class="row comment-container">
    <div class="col-md-1 comment-user-avatar">
      <% if comment.user %>
        <%= gravatar_for comment.user %>
      <% else %>
        <%= image_tag "fallback/no_picture_available.jpg" %>
      <% end %>
    </div>
    <div class="col-md-11">
      <div class="row">
        <span class="comment-user-name">
          <%= comment.user_name %>
        </span>
        <span class="comment-time">
          <%= t ".commented" %> <%= time_ago_in_words comment.created_at %>
          <%= t ".ago" %>
        </span>
      </div>
      <div class="row">
        <%= comment.message %>
      </div>
    </div>
  </div>
</li>
